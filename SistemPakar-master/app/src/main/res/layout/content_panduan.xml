<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_panduan"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="id.sukenda.burisma.activity.PanduanActivity"
    tools:showIn="@layout/activity_panduan">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/vertical_margin"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Panduan Penggunaan aplikasi sistem pakar pendeteksi kerusakan pompa air"
            android:textAlignment="center"
            android:textColor="@color/gray_title_text"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/vertical_margin"
            android:text="Aplikasi pendeteksi kerusakan pompa air adalah aplikasi yang bertujuan untuk memudahkan orang dalam mendeteksi kerusakan yang terjadi pada pompa air, dengan adanya aplikasi ini diharapkan pengguna aplikasi dapat mengetahui kerusakan yang terjadi pada mesin pompa air. \n\nUntuk dapat mengetahui kerusakan yang terjadi pada pompa air dengan menggunakan aplikasi ini sangatlah mudah. \n\nBerikut cara-cara penggunaan untuk mengetahui kerusakan yang terjadi pada mesin pompa air : "
            android:textAlignment="inherit"
            android:textColor="@color/gray_title_text"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/vertical_margin"
            android:text="- Membuka Aplikasi "
            android:textAlignment="inherit"
            android:textColor="@color/gray_title_text"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="339dp"
            android:layout_marginBottom="@dimen/small_margin"
            android:layout_marginTop="@dimen/vertical_margin"
            android:src="@drawable/phone_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/vertical_margin"
            android:text="Untuk menjalankan aplikasi sistem pakar ini pengguna perlu menekan icon aplikasi yang muncul di layar handphone pengguna, seperti pada gambar di atas. "
            android:textAlignment="inherit"
            android:textColor="@color/gray_title_text"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/vertical_margin"
            android:text="- Memilih salah satu menu "
            android:textAlignment="inherit"
            android:textColor="@color/gray_title_text"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="339dp"
            android:layout_marginBottom="@dimen/small_margin"
            android:layout_marginTop="@dimen/vertical_margin"
            android:src="@drawable/menu_utama" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/vertical_margin"
            android:text="Setelah aplikasi terbuka, maka pengguna akan masuk ke menu utama aplikasi, pada menu ini terdapat beberapa menu aplikasi mulai dari memulai pendeteksian kerusakan pompa air, cara penggunaan aplikasi sampai tentang aplikasi ini."
            android:textAlignment="inherit"
            android:textColor="@color/gray_title_text"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/vertical_margin"
            android:text="- Memulai pendeteksi kerusakan pompa air "
            android:textAlignment="inherit"
            android:textColor="@color/gray_title_text"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="339dp"
            android:layout_marginBottom="@dimen/small_margin"
            android:layout_marginTop="@dimen/vertical_margin"
            android:src="@drawable/begin_expert_system" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/vertical_margin"
            android:text="Untuk dapat mendeteksi kerusakan pada mesin pompa air, pengguna harus menjawab ya atau tidak pertanyaan-pertanyaan yang sudah tertera, setelah semua pertayaan di jawab maka pengguna akan mendapatkan jawaban tentang jenis kerusakan yang terjadi."
            android:textAlignment="inherit"
            android:textColor="@color/gray_title_text"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/vertical_margin"
            android:text="- Hasil dan kesimpulan kerusakan "
            android:textAlignment="inherit"
            android:textColor="@color/gray_title_text"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="339dp"
            android:layout_marginBottom="@dimen/small_margin"
            android:layout_marginTop="@dimen/vertical_margin"
            android:src="@drawable/kesimpulan" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="@dimen/vertical_margin"
            android:text="Setelah pengguna selesai menjawab semua pertanyaan yang ada pada menu mulai sistem pakar maka akan tampil menu hasil dan kesimpulan, pada menu ini akan di jelaskan jenis kerusakan apa yang terjadi dan bagaimana cara mengatasinya."
            android:textAlignment="inherit"
            android:textColor="@color/gray_title_text"
            android:textSize="16sp" />

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
